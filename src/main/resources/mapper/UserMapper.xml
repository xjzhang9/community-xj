<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjzhang.community.dao.UserMapper">
	<resultMap id="userModel" type="com.xjzhang.community.entry.model.UserModel">
		<id property="accountId" column="account_id"/>
		<result property="name" column="name" />
		<result property="ids" column="ids" />
		<result property="createDate" column="create_date" />
		<result property="lastModifyDate" column="last_modify_date" />
		<result property="token" column="token" />
		<result property="id" column="id" />
	</resultMap>
    <insert id="inserUser" parameterType="com.xjzhang.community.entry.model.UserModel">
		insert into t_user
		(ACCOUNT_ID, NAME, TOKEN, CREATE_DATE, LAST_MODIFY_DATE, IDS)
		values
		(#{accountId},#{name},#{token},#{createDate},#{last_modify_date}, #{ids})
	</insert>

	<select id="selectUser" resultMap="userModel">
		select * from tb_user wher account_id = #{accountId}
	</select>
</mapper>